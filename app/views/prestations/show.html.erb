<div class="container">
  <div class="text-description">
    <h1><%= link_to :root do %>
      <i class="fa-solid fa-angles-left"></i>
      <% end %><%= @prestation.name %></h1>
    <h2><%= @prestation.category.capitalize %></h2>
  </div>

<div class="d-flex">
  <div class="img-prestation d-flex flex-column">
    <%= cl_image_tag @prestation.poster.key,height: 400, width: 600 %>
  </div>
  <div style="width: 100%; height: 400px;" id="map-prestation"
    data-controller="mapbox"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
    data-mapbox-info-array-value="<%= @info_array.to_json %>">
  </div>
</div>
<div class="p-prestation">
    <p class="ml-5 p-4" ><%= @prestation.description %></p>
</div>

<br><br><br>
<div class="ctr-card">


  <div class="card-comment">
    <h2 class="card-comment-title">Comment :</h2>
      <% @prestation.reservations.each do |reservation|%>
        <h3 class="card-comment-name"><%= reservation.user.first_name %>, <%= reservation.user.last_name %></h3>
      <% end %>
      <% @prestation.reservations.each do |reservation| %>
        <% reservation.reviews.each do |review| %>
          <p class="card-comment-comment"><%= review.comment %></p>
        <% end %>
      <% end %>
  </div>
  <div class="card-reservation">
    <h2>Prix</h2>
    <h3><%= "#{@prestation.price}€/prestation" %></h3>
    <%= simple_form_for [@prestation, @reservation] do |f| %>
        <%= f.input :start_date, as: :date, html5: true %>
        <%= f.input :end_date, as: :date, html5: true %>
        <%= f.button :submit, "Réserver", class: 'btn fr w-45 mb-32px' %>
    <% end %>
  </div>
</div>
</div>
