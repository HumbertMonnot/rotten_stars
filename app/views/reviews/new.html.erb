<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <h1> Your comment on this Prestation ! </h1>
      <div class="card-create-prestation">
        <%= simple_form_for [ @reservation, @review ] do |f| %>
          <h2><%= @reservation.prestation.name %></h2>
          <%= f.input :comment %>
          <%= f.input :rating %>
          <%= f.submit "Submit", class: "btn" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
